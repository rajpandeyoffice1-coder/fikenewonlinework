<%- include('./navbar.ejs') %>

  <title>Checkout | Fika</title>
  <meta name="description" content="Checkout | Fika">

  <main class="content-wrapper">
    <div class="container py-5">

      <div class="d-flex justify-content-center mb-5">
        <div class="d-flex align-items-center" style="width:100%;max-width:520px;gap:12px">
          <button type="button" class="btn btn-primary rounded-pill px-4" id="tab-shipping-btn"
            onclick="openTab('shipping')">Shipping</button>
          <div style="flex:1;border-top:2px dashed #cbd5e1"></div>
          <button type="button" class="btn btn-outline-secondary rounded-pill px-4" id="tab-payment-btn"
            onclick="openTab('payment')">Payment</button>
          <div style="flex:1;border-top:2px dashed #cbd5e1"></div>
          <button type="button" class="btn btn-outline-secondary rounded-pill px-4"
            id="tab-process-btn">Process</button>
        </div>
      </div>

      <div class="row g-4">

        <div class="col-12 col-lg-7">

          <div id="tab-shipping">

            <h4 class="mb-4">Shipping Address</h4>

            <% if (result && result[7] && result[7].length> 0) { %>
              <div class="list-group mb-4">
                <% for(var i=0;i<result[7].length;i++){ var address=result[7][i]; %>
                  <label class="list-group-item d-flex gap-2 align-items-start">
                    <input type="radio" name="savedAddress" class="saved-address mt-1">
                    <div>
                      <strong>
                        <%=address.firstname%>
                          <%=address.lastname%>
                      </strong><br>
                      <%=address.address%>, <%=address.city%>, <%=address.state%> - <%=address.pincode%><br>
                              <span class="text-muted">Phone: <%=address.usernumber%></span>
                    </div>
                  </label>
                  <% } %>
              </div>
              <% } %>

                <div id="shipping-form">
                  <form method="post" action="/save-address">
                    <div class="row g-3">

                      <div class="col-sm-6">
                        <label class="form-label">First Name</label>
                        <input class="form-control form-control-lg" name="firstname" required>
                      </div>

                      <div class="col-sm-6">
                        <label class="form-label">Last Name</label>
                        <input class="form-control form-control-lg" name="lastname" required>
                      </div>

                      <div class="col-sm-6">
                        <label class="form-label">Email</label>
                        <input class="form-control form-control-lg" name="email" required>
                      </div>

                      <div class="col-sm-6">
                        <label class="form-label">Mobile</label>
                        <input class="form-control form-control-lg" name="usernumber" required>
                      </div>

                      <div class="col-sm-6">
                        <label class="form-label">Pincode</label>
                        <input class="form-control form-control-lg" name="pincode" required>
                      </div>

                      <div class="col-sm-6">
                        <label class="form-label">Village / City</label>
                        <input class="form-control form-control-lg" name="village" required>
                      </div>

                      <div class="col-12">
                        <label class="form-label">Address</label>
                        <input class="form-control form-control-lg" name="address" required>
                      </div>

                      <div class="col-sm-6">
                        <label class="form-label">District</label>
                        <select class="form-select form-select-lg" name="city" required>
                          <option value="">Select</option>
                          <option>Mumbai</option>
                          <option>Delhi</option>
                          <option>Bangalore</option>
                          <option>Hyderabad</option>
                          <option>Ahmedabad</option>
                          <option>Chennai</option>
                          <option>Kolkata</option>
                          <option>Pune</option>
                        </select>
                      </div>

                      <div class="col-sm-6">
                        <label class="form-label">State</label>
                        <select class="form-select form-select-lg" name="state" required>
                          <option value="">Select</option>
                          <option>Maharashtra</option>
                          <option>Delhi</option>
                          <option>Karnataka</option>
                          <option>Telangana</option>
                          <option>Gujarat</option>
                          <option>Tamil Nadu</option>
                          <option>West Bengal</option>
                        </select>
                      </div>

                    </div>

                    <button type="button" class="btn btn-primary btn-lg w-100 mt-4" onclick="goToPayment()">
                      Continue to Payment
                    </button>
                  </form>
                </div>

          </div>

          <div id="tab-payment" class="d-none">
            <h4 class="mb-4">Select Payment Method</h4>

            <div class="list-group mb-4">
              <label class="list-group-item"><input type="radio" name="paymentMethod" value="online" checked> Online
                Payment</label>
              <label class="list-group-item"><input type="radio" name="paymentMethod" value="cod"> Cash on
                Delivery</label>
            </div>

            <button class="btn btn-primary btn-lg w-100" onclick="proceedPayment()">Continue</button>
          </div>

          <button type="tab-payment-page" class="btn btn-primary btn-lg w-100 mt-4 d-no" onclick="goToPayment()">
            Continue to Payment
          </button>

          <div id="tab-payment-process " class="d-none">
            <h4 class="mb-4">Complete Payment</h4>
            <button class="btn btn-success btn-lg w-100">Pay Rs. <%=cartData.totalPrice%></button>
          </div>

        </div>

        <aside class="col-12 col-lg-5">
          <div class="position-sticky top-0" style="padding-top:80px">
            <div class="border rounded-4 p-4">

              <h5 class="mb-3">Order Summary</h5>

              <% for(var j=0;j<cartData.cartItems.length;j++){ var item=cartData.cartItems[j]; %>
                <div class="d-flex align-items-center mb-3" style="gap:12px">
                  <img src="/images/<%=item.bookingimage%>"
                    style="width:60px;height:60px;border-radius:8px;object-fit:cover">
                  <div style="flex:1;min-width:0">
                    <div
                      style="font-size:14px;font-weight:600;white-space:nowrap;overflow:hidden;text-overflow:ellipsis">
                      <%=item.bookingname.replace( /"/g,'')%>
                    </div>
                    <div style="font-size:14px;font-weight:700">Rs. <%=item.price%>
                    </div>
                  </div>
                </div>
                <% } %>

                  <hr>

                  <div class="d-flex justify-content-between">
                    <span>Subtotal</span>
                    <strong>Rs. <%=cartData.totalPrice%></strong>
                  </div>

                  <div class="d-flex justify-content-between mt-2">
                    <span>Shipping</span>
                    <span>Free</span>
                  </div>

                  <hr>

                  <div class="d-flex justify-content-between fs-5">
                    <strong>Total</strong>
                    <strong>Rs. <%=cartData.totalPrice%></strong>
                  </div>

            </div>
          </div>
        </aside>

      </div>
    </div>
  </main>

  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

  <script>

    function goToPayment() {
      openTab('payment');
    }
    var addressSelected = false;

    var radios = document.getElementsByClassName('saved-address');
    for (var i = 0; i < radios.length; i++) {
      radios[i].addEventListener('change', function () {
        addressSelected = true;
        document.getElementById('shipping-form').style.display = 'none';
      });
    }

    function proceedPayment() {
      var method = document.querySelector('input[name="paymentMethod"]:checked').value;
      if (method === 'cod') {
        Swal.fire({ icon: 'success', title: 'Thank you', text: 'Your order has been placed successfully' })
          .then(function () { window.location.href = '/' });
      } else {
        openTab('payment-process');
      }
    }

    function openTab(tab) {
      var tabs = ['shipping', 'payment', 'payment-process'];
      for (var i = 0; i < tabs.length; i++) {
        var el = document.getElementById('tab-' + tabs[i]);
        if (el) el.classList.add('d-none');
      }
      var show = document.getElementById('tab-' + tab);
      if (show) show.classList.remove('d-none');
    }
  </script>

  <script src="/theme/assets/js/theme.min.js"></script>

  <%- include('./footer2.ejs') %>
    <%- include('./footer.ejs') %>