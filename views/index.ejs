          const itemCat = item.getAttribute('data-category');

          if (categoryId === 'all' || itemCat === categoryId) {
            if (visibleCount < 6) {
              item.style.display = 'block';
              visibleCount++;
            }
          }
        });
      }

      // INITIAL LOAD ‚Äì SHOW FIRST 6
      document.addEventListener('DOMContentLoaded', function () {
        filterTrending('all');
      });
    </script>


