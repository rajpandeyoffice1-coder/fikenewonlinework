<!DOCTYPE html>
<html lang="en" data-bs-theme="light">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>FIKA | Welcome Back</title>

  <link rel="icon" href="/images/logo.png" sizes="32x32">
  <link rel="stylesheet" href="/theme/assets/css/theme.min.css">
  <link rel="stylesheet" href="/theme/assets/icons/cartzilla-icons.min.css">
  <script src="/theme/assets/js/theme-switcher.js"></script>

  <style>
    body{background:#f5f6f8}
    .auth-card{max-width:1000px;margin:auto;border-radius:24px;overflow:hidden;box-shadow:0 20px 60px rgba(0,0,0,.08)}
    .left-panel{background:linear-gradient(135deg,#f1f3f5,#e9ecef)}
    .form-control{border-radius:12px;height:48px;padding-left:46px}
    .input-icon{position:absolute;left:16px;top:50%;transform:translateY(-50%);color:#9ca3af}
    .password-toggle{position:absolute;right:14px;top:50%;transform:translateY(-50%);background:none;border:none}
  </style>
  <style>
    .input-wrapper {
  position: relative;
}

.form-control {
  height: 52px;
  padding-right: 48px;
}

.password-toggle {
  position: absolute;
  right: 14px;
  top: 50%;
  transform: translateY(-50%);
  background: none;
  border: none;
  padding: 0;
  line-height: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  height: 24px;
  width: 24px;
  cursor: pointer;
}

.password-toggle i {
  font-size: 18px;
  color: #6b7280;
}

  </style>
</head>

<body>

<%- include('./navbar.ejs') %>

<div class="container py-5">
  <div class="auth-card bg-white">
    <div class="row g-0">

      <div class="col-md-6 d-none d-md-flex flex-column justify-content-center text-center p-4 left-panel">
        <img src="/images/logo.png" style="width:160px" class="mb-4 mx-auto">
        <h5 class="fw-bold mb-3">Welcome Back</h5>
        <div class="d-flex justify-content-center gap-3 mt-3 flex-wrap">
          <div class="bg-white rounded-3 px-3 py-2 shadow-sm">Secure Login</div>
          <div class="bg-white rounded-3 px-3 py-2 shadow-sm">Fast Checkout</div>
          <div class="bg-white rounded-3 px-3 py-2 shadow-sm">Exclusive Offers</div>
        </div>
      </div>

      <div class="col-md-6 p-4 p-lg-5">

        <% if(msg){ %>
          <div class="alert alert-danger">
            <i class="ci-close-circle me-2"></i><%=msg%>
          </div>
        <% } %>

        <form method="post" action="/login1" id="loginForm">

          <h4 class="fw-bold mb-2">Sign In</h4>
          <p class="text-muted mb-4">Access your FIKA account</p>

          <div class="mb-3 position-relative">
            <input type="email" name="email" class="form-control" placeholder="Email Address" required>
          </div>

          <div class="mb-3 position-relative">
            <i class="ci-locked input-icon"></i>
            <input type="password" name="password" id="passwordInput" class="form-control" placeholder="Password" required>
            <button type="button" class="password-toggle" id="passwordToggle">
            </button>
          </div>

          <div class="d-flex justify-content-between align-items-center mb-4">
            <div class="d-flex align-items-center gap-2">
              <div class="checkbox" id="rememberCheckbox"></div>
              <span class="small text-muted">Remember me</span>
              <input type="checkbox" name="remember" id="remember" class="visually-hidden">
            </div>
            <a href="/login/forgot" class="text-decoration-none small text-primary">Forgot password?</a>
          </div>

          <button type="submit" class="btn btn-dark w-100 rounded-pill mb-3" id="submitBtn">
            <span>Sign In</span>
            <i class="ci-chevron-right ms-2"></i>
          </button>

          <div class="text-center">
            <span class="text-muted">Donâ€™t have an account?</span>
            <a href="/signup" class="fw-medium text-decoration-underline ms-1 auth-trigger">Create Account</a>
          </div>

        </form>

      </div>
    </div>
  </div>
</div>

<script src="/theme/assets/js/theme.min.js"></script>

<script>
document.addEventListener('DOMContentLoaded',()=>{
  const toggle=document.getElementById('passwordToggle')
  const password=document.getElementById('passwordInput')
  toggle.addEventListener('click',()=>{
    const type=password.type==='password'?'text':'password'
    password.type=type
    toggle.innerHTML=type==='password'?'<i class="ci-eye"></i>':'<i class="ci-eye-off"></i>'
  })

  const rememberBox=document.getElementById('rememberCheckbox')
  const rememberInput=document.getElementById('remember')
  rememberBox.addEventListener('click',()=>{
    rememberBox.classList.toggle('checked')
    rememberInput.checked=rememberBox.classList.contains('checked')
  })
})
</script>

</body>
</html>
