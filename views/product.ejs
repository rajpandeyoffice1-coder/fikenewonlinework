    <!-- Enhanced JavaScript -->
    <script>
        // Generate SKU
        function generateSKU() {
            const now = new Date();
            const timestamp = now.getFullYear().toString() + 
                            (now.getMonth() + 1).toString().padStart(2, '0') + 
                            now.getDate().toString().padStart(2, '0') + 
                            now.getHours().toString().padStart(2, '0') + 
                            now.getMinutes().toString().padStart(2, '0') + 
                            now.getSeconds().toString().padStart(2, '0');
            return 'PROD-' + timestamp + Math.floor(Math.random() * 1000).toString().padStart(3, '0');
        }

        document.getElementById("sku").value = generateSKU();

        // Unit synchronization
        document.getElementById('length_unit').addEventListener('change', function() {
            const selectedUnit = this.value;
            document.getElementById('breadth_unit').value = selectedUnit;
            document.getElementById('height_unit').value = selectedUnit;
        });

        // Tab switching
        document.querySelectorAll('.tab-btn').forEach(button => {
            button.addEventListener('click', function() {
                // Remove active class from all tabs
                document.querySelectorAll('.tab-btn').forEach(btn => btn.classList.remove('active'));
                // Hide all tab contents
                document.querySelectorAll('.tab-content').forEach(content => content.style.display = 'none');
                
                // Add active class to clicked tab
                this.classList.add('active');
                // Show corresponding content
                const tabId = this.getAttribute('data-tab');
                document.getElementById(tabId).style.display = 'block';
                
                // If viewing products tab, load products
                if (tabId === 'view-products') {
                    loadProducts();
                }
            });
        });

        // Load products function
        function loadProducts() {
            // This would typically make an AJAX call to load products
            // For demo purposes, we'll simulate loading
            const loader = document.getElementById('loader');
            loader.style.display = 'flex';
            
            setTimeout(() => {
                loader.style.display = 'none';
                // Update product count
                document.getElementById('productCount').textContent = '25';
            }, 1000);
        }

        // Rich text editor commands
        function runCommand(el, commandName, arg) {
            if (commandName === "createLink") {
                const url = prompt("Enter the URL:", "https://");
                if (url) {
                    document.execCommand(commandName, false, url);
                }
            } else {
                document.execCommand(commandName, false, arg);
            }
            // Focus on the active editor
            const activeEditor = document.querySelector('.rich-text-editor:focus');
            if (activeEditor) {
                activeEditor.focus();
            }
        }

        // Form submission with loader
        document.querySelector('.uploadImage').addEventListener('submit', function(e) {
            e.preventDefault();
            
            // Get editor content
            const description = document.getElementById('editor').innerHTML.trim();
            const shortDescription = document.getElementById('editor1').innerHTML.trim();
            
            // Create hidden fields
            const descInput = document.createElement('input');
            descInput.type = 'hidden';
            descInput.name = 'description';
            descInput.value = description;
            
            const shortDescInput = document.createElement('input');
            shortDescInput.type = 'hidden';
            shortDescInput.name = 'short_description';
            shortDescInput.value = shortDescription;
            
            // Append to form
            this.appendChild(descInput);
            this.appendChild(shortDescInput);
            
            // Show loader
            const loader = document.getElementById('loader');
            loader.style.display = 'flex';
            
            // Submit form
            this.submit();
        });

        // File upload preview
        document.querySelectorAll('input[type="file"]').forEach(input => {
            input.addEventListener('change', function() {
                const container = this.closest('.file-upload-container');
                if (this.files.length > 0) {
                    const fileName = this.files.length === 1 ? 
                        this.files[0].name : 
                        `${this.files.length} files selected`;
                    
                    container.querySelector('p').textContent = fileName;
                    container.style.borderColor = 'var(--success-color)';
                    container.style.background = 'rgba(46, 204, 113, 0.1)';
                }
            });
        });

        // Initialize on page load
        document.addEventListener('DOMContentLoaded', function() {
            // Load categories
            fetch('/api/categories')
                .then(response => response.json())
                .then(data => {
                    const select = document.getElementById('categoryid');
                    select.innerHTML = '<option value="">Select Category</option>';
                    data.forEach(category => {
                        const option = document.createElement('option');
                        option.value = category.id;
                        option.textContent = category.name;
                        select.appendChild(option);
                    });
                })
                .catch(error => console.error('Error loading categories:', error));
            
            // Set current year in footer
            document.querySelector('footer p').textContent = 
                `Â© ${new Date().getFullYear()} FIKA. All rights reserved.`;
        });

        // Enhance form validation
        document.querySelectorAll('input[required], select[required]').forEach(element => {
            element.addEventListener('invalid', function(e) {
                e.preventDefault();
                this.style.borderColor = 'var(--danger-color)';
                this.focus();
                
                // Create error message
                const errorDiv = document.createElement('div');
                errorDiv.className = 'text-danger mt-2';
                errorDiv.innerHTML = `<i class="fas fa-exclamation-circle"></i> Please fill in this field`;
                
                const parent = this.parentElement;
                if (!parent.querySelector('.text-danger')) {
                    parent.appendChild(errorDiv);
                }
            });
            
            element.addEventListener('input', function() {
                this.style.borderColor = '';
                const error = this.parentElement.querySelector('.text-danger');
                if (error) error.remove();
            });
        });

        // Add animation to form elements on focus
        document.querySelectorAll('.form-control, .form-select').forEach(element => {
            element.addEventListener('focus', function() {
                this.parentElement.classList.add('focused');
            });
            
            element.addEventListener('blur', function() {
                this.parentElement.classList.remove('focused');
            });
        });
    </script>
